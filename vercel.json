{
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health.go"
    },
    {
      "source": "/api/profiles",
      "destination": "/api/profiles.go"
    },
    {
      "source": "/api/profiles/:path*",
      "destination": "/api/profiles.go"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/$1"
    }
  ],
  "builds": [
    {
      "src": "apps/backend/api/*.go",
      "use": "@vercel/go"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next",
      "root": "apps/frontend",
      "config": { "includeFiles": "apps/frontend/**" }
    }
  ]
}
