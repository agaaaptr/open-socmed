{
  "builds": [
    {
      "src": "apps/backend/api/**/*.go",
      "use": "@vercel/go"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "includeFiles": "apps/frontend/**"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/$1"
    }
  ]
}